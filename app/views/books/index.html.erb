<%= render 'books/list', book_new: @book_new, user: @user %>
<h1 class="heading">Books</h1>
  <table>
    <thead>
      <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <today>
      <tr>
        <% @books.each do |book| %>
        <td class="book-title"><%= link_to 'book.title',book_path(book) %></td>
        <td class="book-body"><%= book.body %></td>
        </tr>
      <% end %>
    </today>
  </table>