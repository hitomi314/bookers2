<div class="container">
  <div class="row">
    <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
      <h1>welcome to <i class="fas fa-book"></i> <strong>Bookers</strong> !!</h1>
      <p>
        In
        <i class="fas fa-book"></i>
        <strong>Bookers</strong>
        ,
        </p>
        <p>you can share and exchange your opinions , inpressions , and emotions</p>
        <p>about various books!</p>
        <% if user_signed_in? %>
        <div class="row">
          <button type="button" class="btn btn-info btn-lg btn-block">
            <%= link_to "Log in", user_path(current_user.id), class:"text-light" %>
          </button>
        </div>
        <div class="row">
          <button type="button" class="btn btn-success btn-lg btn-block">
           <%= link_to "Sing up", user_path(current_user.id), class:"text-light" %>
          </button>
        </div>
        <% else %>
        <div class="row">
          <button type="button" class="btn btn-info btn-lg btn-block">
            <%= link_to "Log in", user_session_path, class:"text-light" %>
          </button>
        </div>
        <div class="row">
          <button type="button" class="btn btn-success btn-lg btn-block">
            <%= link_to "Sing up", new_user_registration_path, class:"text-light" %>
          </button>
        </div>
        <% end %>
    </div>
  </div>
</div>